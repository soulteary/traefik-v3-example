# OwlMail 邮件测试服务配置
# https://github.com/soulteary/owlmail

# 服务配置
SERVICE_NAME=owlmail
SERVICE_DOMAIN=mail.example.com
SERVICE_PORT=1080
DOCKER_IMAGE=ghcr.io/soulteary/owlmail:0.3.0

# SMTP 配置
SMTP_PORT=1025
SMTP_HOST=0.0.0.0


# 服务标签前缀（用于构建 Traefik labels）
SERVICE_PREFIX=owlmail

# 数据持久化目录
DATA_DIR=./owlmail-data

# 日志配置
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3

# 健康检查配置
HEALTH_CHECK_INTERVAL=10s
HEALTH_CHECK_TIMEOUT=3s
HEALTH_CHECK_RETRIES=3

# 可选配置（取消注释以启用）
# MAILDEV_MAIL_DIRECTORY=/data/mails
# MAILDEV_WEB_USER=admin
# MAILDEV_WEB_PASS=password123
# MAILDEV_VERBOSE=false
